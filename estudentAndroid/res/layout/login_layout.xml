<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_login" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <EditText
            android:id="@+id/eUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|number"
            android:hint="@string/edit_text_username" />

        <EditText
            android:id="@+id/ePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eUsername"
            android:layout_alignRight="@+id/eUsername"
            android:layout_below="@+id/eUsername"
            android:inputType="textPassword"
            android:hint="@string/edit_text_password" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ePassword"
            android:layout_alignRight="@+id/ePassword"
            android:layout_below="@+id/ePassword"
            android:text="@string/confirm" />
    </RelativeLayout>

</RelativeLayout>